<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bienvenu, choisissez une activitÃ©e !"
        android:id="@+id/textViewPresentation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPresentation"
        android:layout_gravity="center"
        android:id="@+id/LinearLayoutMenu">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="110dip"
            android:layout_height="fill_parent"
            android:onClick="onMathClick" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:src="@drawable/math"
                android:layout_gravity="center_horizontal"
                android:onClick="onMathClick"
                android:minHeight="55dp"
                android:minWidth="55dp"
                android:nestedScrollingEnabled="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/math"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_below="@+id/textViewPresentation"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:onClick="onQcmClick"
            android:nestedScrollingEnabled="false">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:src="@drawable/qcm"
                android:layout_gravity="center_horizontal"
                android:onClick="onQcmClick"
                android:nestedScrollingEnabled="false"
                android:minHeight="55dp"
                android:minWidth="55dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/qcm"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="110dip"
            android:layout_height="fill_parent"
            android:onClick="onCulturegClick">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/cultureg"
                android:layout_gravity="center_horizontal"
                android:onClick="onCulturegClick"
                android:minHeight="55dp"
                android:minWidth="55dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/culture"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/LinearBtn"
        android:gravity="center|bottom"
        >

    </LinearLayout>

</RelativeLayout>
