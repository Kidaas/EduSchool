<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.kevinsarrazin.eduschool.ErreurMultiplicationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutErreur">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ERREUR(S)"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre d&apos;erreur(s) : "
            android:id="@+id/txtViewErreur"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:text="Corriger mes erreurs"
            android:id="@+id/btnCorrigerErreurs"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickCorrigerErreur" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choisir une autre table"
            android:id="@+id/btnRetourAccueil"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickChoisirExercice" />
    </LinearLayout>

</RelativeLayout>
