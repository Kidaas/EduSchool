<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:icon">@drawable/logo_action_bar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/action_bar_background</item>
    </style>

    <!-- Stylise les boutons -->
    <style name="AppTheme.Button" parent="android:style/Widget.Material.Button">
        <item name="android:background">#4183D7</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Couleur commune aux messages d'erreurs -->
    <color name="errorColor">#f00</color>

</resources>
