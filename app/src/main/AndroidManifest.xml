<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.kevinsarrazin.eduschool" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CulturegActivity"
            android:label="@string/title_activity_cultureg" >
        </activity>
        <activity
            android:name=".activity.QcmActivity"
            android:label="@string/title_activity_QCM" >
        </activity>
        <activity
            android:name=".activity.MathActivity"
            android:label="@string/title_activity_math" >
        </activity>
        <activity
            android:name=".activity.NiveauActivity"
            android:label="@string/title_activity_niveau" >
        </activity>
        <activity
            android:name=".ResultatActivity"
            android:label="@string/title_activity_resultat" >
        </activity>
        <activity
            android:name=".activity.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name=".activity.ScoreActivity"
            android:label="@string/title_activity_score" >
        </activity>
    </application>

</manifest>
